<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zerogravity.myapp.auth.dao.RefreshTokenDao">

    <!-- Result map for RefreshToken -->
    <resultMap id="RefreshTokenResultMap" type="com.zerogravity.myapp.auth.dto.RefreshToken">
        <id property="tokenId" column="token_id"/>
        <result property="userId" column="user_id"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
        <result property="usedAt" column="used_at"/>
        <result property="isRevoked" column="is_revoked"/>
    </resultMap>

    <!-- Insert new refresh token -->
    <insert id="insertRefreshToken" parameterType="com.zerogravity.myapp.auth.dto.RefreshToken">
        INSERT INTO refresh_tokens (
            token_id,
            user_id,
            refresh_token,
            expires_at,
            created_at,
            is_revoked
        ) VALUES (
            #{tokenId},
            #{userId},
            #{refreshToken},
            #{expiresAt},
            #{createdAt},
            #{isRevoked}
        )
    </insert>

    <!-- Find refresh token by token string -->
    <select id="findByToken" parameterType="string" resultMap="RefreshTokenResultMap">
        SELECT
            token_id,
            user_id,
            refresh_token,
            expires_at,
            created_at,
            used_at,
            is_revoked
        FROM refresh_tokens
        WHERE refresh_token = #{token}
    </select>

    <!-- Update used_at timestamp -->
    <update id="updateUsedAt">
        UPDATE refresh_tokens
        SET used_at = #{usedAt}
        WHERE token_id = #{tokenId}
    </update>

    <!-- Revoke a specific token -->
    <update id="revokeToken" parameterType="long">
        UPDATE refresh_tokens
        SET is_revoked = TRUE
        WHERE token_id = #{tokenId}
    </update>

    <!-- Revoke all tokens for a user -->
    <update id="revokeAllByUserId" parameterType="long">
        UPDATE refresh_tokens
        SET is_revoked = TRUE
        WHERE user_id = #{userId}
    </update>

    <!-- Delete expired tokens -->
    <delete id="deleteExpiredTokens" parameterType="java.time.LocalDateTime">
        DELETE FROM refresh_tokens
        WHERE expires_at &lt; #{now}
          AND is_revoked = TRUE
    </delete>

</mapper>
